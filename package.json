    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test && npm run test:e2e",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "music:download": "tsx scripts/music-files/download-musicxml.ts",
    "music:parse": "tsx scripts/music-files/parse-musicxml.ts",
    "music:seed": "tsx scripts/music-files/seed-pieces.ts",
    "music:validate": "tsx scripts/music-files/validate-import.ts",
