    "content:import": "tsx scripts/content-generation/import-commentary-to-db.ts",
    "content:import:all": "tsx scripts/content-generation/import-generated-content.ts",
    "content:export:markdown": "tsx scripts/content-generation/export-commentary-markdown.ts",
    "validate:spec": "tsx scripts/validate-spec-compliance.ts"
